{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1000,
    "data": {
        "url": "https://raw.githubusercontent.com/ecyl456/week9_homework/refs/heads/main/expected-years-of-schooling.csv"
    },
    "transform": [
        {
            "filter": "datum.Year == 2020"
        },
        {
            "window": [
                {
                    "op": "rank",
                    "as": "rank"
                }
            ],
            "sort": [
                {
                    "field": "Expected years of schooling",
                    "order": "ascending"
                }
            ]
        },
        {
            "filter": "datum['Expected years of schooling'] <= 10"
        }
    ],
    "mark": {
        "type": "bar",
        "tooltip": true
    },
    "encoding": {
        "x": {
            "field": "Entity",
            "type": "nominal",
            "title": "Country",
            "sort": {
                "field": "Expected years of schooling",
                "order": "ascending"
            }
        },
        "y": {
            "field": "Expected years of schooling",
            "type": "quantitative",
            "title": "Expected Years of Schooling",
            "scale": {
                "domain": [
                    0,
                    25
                ]
            },
            "axis": {
                "format": "d",
                "grid": true
            }
        },
        "color": {
            "field": "Expected years of schooling",
            "type": "quantitative",
            "scale": {
                "scheme": "blues"
            },
            "legend": {
                "title": "Expected Years",
                "orient": "top"
            }
        },
        "tooltip": [
            {
                "field": "Entity",
                "type": "nominal",
                "title": "Country"
            },
            {
                "field": "Expected years of schooling",
                "type": "quantitative",
                "title": "Expected Years of Schooling"
            }
        ]
    },
    "config": {
        "view": {
            "stroke": "transparent"
        },
        "axis": {
            "domain": false,
            "grid": true
        }
    },
    "title": {
        "text": "Expected Years of Schooling by Country (2020)",
        "fontSize": 13,
        "anchor": "middle",
        "color": "black"
    }
}